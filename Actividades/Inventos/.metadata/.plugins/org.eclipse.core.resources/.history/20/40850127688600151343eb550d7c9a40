package BoletinFunciones;
import java.util.InputMismatchException;
import java.util.Scanner;


public class Ejercicio02 {
	/**Sobrecarga la función del ejercicio anterior para que se pueda operar con enteros y con
decimales. Haz un programa que utilice las dos funciones, con enteros y con decimales.*/
	public static void main(String[] args) {

		/** VARIABLES Y OBJETOS */
		int num1=0, num2=0, result=0;
		double numD1=0, numD2=0, resultD=0;
		boolean error=false;
		char opcion, eleccion;
		Scanner teclado = new Scanner(System.in);

		/** PEDIMOS DATOS */
		do {
			try {
				System.out.println("Indica que tipo de operacion desea hacer: 1.Decimal 2.Entera");
				eleccion=teclado.next().charAt(0);
				if (eleccion==1) {
					System.out.print("Introduzca un número decimal: ");
					numD1 = teclado.nextDouble();
					System.out.print("Introduzca otro número decimal: ");
					numD2 = teclado.nextDouble();
				}
				if (eleccion==2) {
					System.out.print("Introduzca un número entero: ");
					num1 = teclado.nextInt();
					System.out.print("Introduzca otro número entero: ");
					num2 = teclado.nextInt();
				}
				
				do {
					System.out.print("Introduzca una operación: +,-,*,/ ");
					opcion = teclado.next().charAt(0);
				} while (opcion != '+' && opcion != '-' && opcion != '*'
						&& opcion != '/');
				
				if (eleccion==1){
				resultD = calculadoraDecimal(numD1, numD2, opcion);
				System.out.print("El resultado de " + num1 + " " + opcion + " "
						+ num2 + " = " + result);
				}
				if(eleccion==2){
					result = calculadoraEntera(num1, num2, opcion);
					System.out.print("El resultado de " + num1 + " " + opcion + " "
							+ num2 + " = " + result);
					}
				
				error = false;
				
			} catch (InputMismatchException e) {
				System.out
						.println("Error, no ha introducido un número entero");
				error = true;
				teclado.nextLine(); // Se limpia el buffer
			}
			
		} while (error);

		teclado.close();
	}

	public static int calculadoraEntera (int num1, int num2, char opcion) {

		int resultado=0;
		
		switch (opcion) {

		case '+':// SUMA
			resultado = num1 + num2;
			break;
		case '-':// RESTA
			resultado = num1 - num2;
			break;
		case '*':// MULTIPLICACION
			resultado = num1 * num2;
			break;
		case '/':// DIVISION
			resultado = num1 / num2;
			break;
		}
		
		return resultado;

	}
	
	public static double calculadoraDecimal (double numD1, double numD2, char opcion) {

		double resultado=0;
		
		switch (opcion) {

		case '+':// SUMA
			resultado = numD1 + numD2;
			break;
		case '-':// RESTA
			resultado = numD1 - numD2;
			break;
		case '*':// MULTIPLICACION
			resultado = numD1 * numD2;
			break;
		case '/':// DIVISION
			resultado = numD1 / numD2;
			break;
		}
		
		return resultado;

	}
}