package Othello;

public class Control {
	
	public static void abecedario(int num) {

		char[] abecedario;
		abecedario = new char[num];

		if (num > 26)
			System.out.println("Un abecedario no tendrá más de 26 caracteres.");
		else
			for (int i = 0; i < num; i++) {
				abecedario[i] = (char) ('A' + i);
				if (i == num-1)
					System.out.print(abecedario[i]);
				else
					System.out.print(abecedario[i]+"  ");
			}
	}
}
